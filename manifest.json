{
  "name":"Aria2 Downloader",
  "description":"Override Download Page with Aria2",
  "version":"0.1",
  "manifest_version":2,
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "background": {
      "page": "view/background.html",
      "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["css/banner.css"]
    }
  ],
  "web_accessible_resources": [
    "view/banner.html"
  ],
  "permissions": [
   "downloads",
   "downloads.shelf",
   "tabs",
   "*://*/*",
   "background",
   "storage"
  ]
}
